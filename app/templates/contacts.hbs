{{page-title "Contacts"}}
<table class="table table-dark table-striped">
  <thead>
  <tr>
    <td>Nom</td>
  </tr>
  </thead>
  <tbody>
  {{#each @model.contacts as |contact|}}
    <tr>
      <td>{{contact.nom}}</td>
      <td>{{contact.prenom}}</td>
      <td>{{contact.email}}</td>
      <td>
        <button {{action "delete" contact}} class="btn btn-primary btn-sm">
          <i class="far fa-trash-alt"></i>
        </button>
      </td>
    </tr>
  {{/each}}
  </tbody>
  <tfoot>
    <tr>
      <td>
        <LinkTo @route="contacts.add">Ajouter</LinkTo>
      </td>
    </tr>
  </tfoot>
</table>
{{outlet}}